      <!-- Category Button Component Section -->
      <section class="component-section">
        <button class="section-header" data-toggle-section aria-expanded="false">
          <h2 class="heading-md">Category Button</h2>
          <svg class="toggle-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="section-content" data-section-content aria-hidden="true">
          <div class="content-inner">
            <!-- Component Name -->
            <div class="component-name">
              <code class="body-sm">ButtonCategory.astro</code>
            </div>
            
            <!-- All Variants Examples -->
            <section class="section">
              <h2 class="heading-xs">All Variants</h2>
              <p class="body-sm text-faded">Four category button styles for different use cases</p>
              
              <div class="button-group" style="gap: var(--spacing-16); align-items: center;">
                <ButtonCategory variant="label" label="Books">
                  <IconBooksRegular slot="icon" size={14} />
                </ButtonCategory>
                
                <ButtonCategory variant="chip" label="Books">
                  <IconBooksRegular slot="icon" size={14} />
                </ButtonCategory>
                
                <ButtonCategory variant="block" label="Books">
                  <IconBooksRegular slot="icon" size={24} />
