                <Button variant="primary" label="Primary Button" />
                <Button variant="secondary" label="Secondary Button" />
              </div>
            </section>

            <!-- Interactive Buttons -->
            <section class="section">
              <h2 class="heading-xs">Interactive Examples</h2>
              <p class="body-sm text-faded">Try hovering, clicking, and tabbing</p>
              
              <div class="button-group">
                <Button variant="primary" label="Save Changes" />
                <Button variant="secondary" label="Cancel" />
                <Button variant="primary" label="Continue" />
              </div>
            </section>

            <!-- States Visualization -->
            <section class="section">
              <h2 class="heading-xs">Component States</h2>
              <p class="body-sm text-faded">Both variants support all interactive states</p>
              
              <div class="states-grid">
                <!-- Primary Default -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Primary - Default</p>
                  <div class="state-box">
                    <Button variant="primary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Gradient bg • Subtle border • White text
                  </p>
                </div>

                <!-- Primary Hover -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Primary - Hover</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">↑ Hover me</p>
                    <Button variant="primary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Medium border (2px)
                  </p>
                </div>

                <!-- Primary Focus -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Primary - Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <Button variant="primary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Thick border (4px) • Focus ring
                  </p>
                </div>

                <!-- Secondary Default -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Secondary - Default</p>
                  <div class="state-box">
                    <Button variant="secondary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Light bg • Primary border • Primary text
                  </p>
                </div>

                <!-- Secondary Hover -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Secondary - Hover</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">↑ Hover me</p>
                    <Button variant="secondary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Medium border (2px)
                  </p>
                </div>

                <!-- Secondary Focus -->
                <div class="state-demo">
                  <p class="body-xs text-faded">Secondary - Focus</p>
                  <div class="state-box">
                    <p class="body-xxs text-faded hint">Tab</p>
                    <Button variant="secondary" label="Button" />
                  </div>
                  <p class="body-xxs text-faded state-description">
                    Thick border (4px) • Focus ring
                  </p>
                </div>
              </div>
            </section>

            <!-- Design Tokens Reference -->
            <section class="section tokens-section">
              <h2 class="heading-xs">Design Tokens Used</h2>
              
              <div class="tokens-grid">
                <div class="token-category">
